@page
@model ListModel
@{
}
<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                  asp-for="SearchTerm"/>
            <span>
                <button class="glyphicon glyphicon-search">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>
            @restaurant.Name
        </td>
        <td>
            @restaurant.Location
        </td>
        <td>
            @restaurant.Cuisine
        </td>
        <td>
            <a class="btn btn_lg"
               asp-page="./Detail"
               asp-route-restaurantId="@restaurant.Id">
                <i class="glyphicon glyphicon-zoom"></i>
            </a>
        </td>
        <td>
            <a class="btn btn_lg"
               asp-page="./Edit"
               asp-route-restaurantId="@restaurant.Id">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
        </td>
    </tr>
    }
</table>
<a asp-page="./Edit" class="btn btn-primary">Add New</a>
